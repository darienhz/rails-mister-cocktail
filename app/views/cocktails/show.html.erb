<h1>Here is your cocktail!</h1>
<h3><%= @cocktail.name %></h3>
<%= cl_image_tag(@cocktail.photo.key,
      width: 400, height: 300, crop: :fill) %>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <%= link_to "Delete",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<% end %>
<%= link_to "Back", cocktails_path %><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
